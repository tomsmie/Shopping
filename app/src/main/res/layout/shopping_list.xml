<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:id="@+id/shop2">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="5px"
                android:background="#1E000000" />
            <TextView
                android:id="@+id/token2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/circle"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="#ffffff"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/list2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/token2"
                android:layout_alignBottom="@+id/token2"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/token2"
                android:textColor="#000000"
                android:textSize="25dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="25dp"
                android:id="@+id/price2"
                android:layout_alignBaseline="@+id/list2"
                android:layout_alignBottom="@+id/list2"
                android:layout_toRightOf="@+id/list2"
                android:layout_toEndOf="@+id/list2"
                android:layout_marginLeft="68dp"
                android:layout_marginStart="68dp" />
        </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#1E000000"
                android:layout_alignStart="@+id/goods_letter"/>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
